        <div class="info">
            <p>Encontre os carros dos seus Sonhos</p>
            <p>Carros desportivos , bonitos , seguros e a preços acessíveis !</p>
        </div>

    </header>
    <main>
        
        <section id="search_destiny">
            <p> Encontre os melhores carros do mercado</p>
            <form action="/buscarCarros" method="post"  class="inputs_search">
                <div class="inputs">
                    <input type="text" name="tipo" placeholder="Tipo">
                </div>
               <div class="inputs">
                    <input type="submit" class="procurar" value="Procurar">
               </div>
            </form>
        </section>

        <% if(carros == null || carros == 0){%>
        <p></p>
        <%} else {%>
        <div class="carros">
                <table>
                    <thead>
                        <th>numero</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Matricula</th>
                        <th>Valor por dia ($)</th>
                    </thead>
                    <tbody>
                        <% carros.forEach(function(dado){ %>
                            <tr>
                                <td><%- dado.id %></td>
                                <td><%- dado.marca %></td>
                                <td><%- dado.modelo %></td>
                                <td><%- dado.matricula%></td>
                                <td><%- dado.valor %></td>
                            </tr>
                        <%});%>
                    </tbody>
                </table>
                <button class="alugar">Alugar</button>
            <%};%>
            <form action="/alugarCarro" method="post" class="esconderForm formulario">
                <input type="number" required placeholder="Numero do Carro" name="idcarro">
                <input type="text" required placeholder="local de Entrega cidade e país" name="localEntrega">
                <input type="text" required placeholder="local de Devolução cidade e país" name="localDevolucao">
                <input type="submit" value="Efectuar Aluguer" class="efectuarAluguer">
            </form>
        </div>
        <section id="destinations">
            <p> Carros Modernos mais Populares </p>
            <div class="imagens_turismo">
                <div class="imagem">
                    <figure>
